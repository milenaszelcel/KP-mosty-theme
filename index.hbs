{{!< default}}
<div>
    <div class="gh-container main-content">

        {{#get "pages" filter="tag:about" limit="1"}}
            {{#foreach pages}}
                <div class="container">
                    {{#if @custom.imie_i_nazwisko}}
                        <div class="name-surname">
                            {{@custom.imie_i_nazwisko}}
                        </div>
                    {{/if}}
                    <div class="container-column">
                        <div class="title">{{title}}</div>
                        <div class="about-card">

                            <div class="right-card-side">

                                <div class="about-content">{{content}}</div>
                            </div>

                        </div>
                        <a href="/kontakt/#contact" class="button">Kontakt</a>
                    </div>
                </div>

            {{/foreach}}
        {{/get}}

        <div class="main-site-gallery">
            {{#get "posts" filter="tags:projects" limit="2"}}
                {{#foreach posts}}

                    {{#if feature_image}}

                        <img
                            src="{{feature_image}}"
                            alt="{{title}}"
                            class="main-site-img"
                        />

                    {{/if}}

                {{/foreach}}
            {{/get}}
        </div>

        <div class="container-column container-centered">

            {{> companies}}
            <a href="/projekty/#projekty" class="button">Pokaż więcej</a>
                
            <div>

                {{! If JS isn't enabled, fallback to standard pagination }}
                <noscript>
                    <div class="gh-pagination">
                        {{pagination}}
                    </div>
                </noscript>
            </div>
        </div>
    </div>
</div>