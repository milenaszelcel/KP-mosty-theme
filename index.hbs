{{!< default}}
<div class="gh-page">
    <div class="gh-container">

        <div class="companies-container">
            {{#get "tags" limit="1" filter="slug:companies"}}
                {{#foreach tags}}
                    <p class="gh-title tag-name">{{name}}</p>
                {{/foreach}}
           {{/get}}

            <figure class="company-list">
            {{#get "posts" filter="tags:companies"}}
                {{#foreach posts}}
                    {{#if feature_image}}
                        <img class="company-image" src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                        {{#if feature_image_caption}}
                        <figcaption>{{feature_image_caption}}</figcaption>
                        {{/if}}
                    {{/if}}
                {{/foreach}}
            {{/get}}
            </figure>

        </div>
            {{#get "pages" filter="tag:kontakt" limit="1"}}
            {{#foreach pages}}
            <div class="contact-banner">
                <div class="contact-container">
                    <div class="contact-title-container">
                        <h2 class="contact-title">{{title}}</h2>
                    </div>
            
                    {{#if @custom.numer-telefonu}}
                        <p>{{@custom.numer-telefonu}}</p>
                    {{/if}}
                </div>
            </div>
            {{/foreach}}
            {{/get}}

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
