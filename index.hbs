{{!< default}}
<main class="main-content">
  {{> about}}

  <div class="main-site-gallery">
    {{#get "posts" filter="tags:projects" limit="2"}}
    {{#foreach posts}}

    {{#if feature_image}}

    <img src="{{ feature_image }}" alt="{{ title }}" class="main-site-img" />

    {{/if}}

    {{/foreach}}
    {{/get}}
  </div>
  <div class="container">
    <div class="container-column container-centered">
      {{#get "pages" limit="1" filter="tag:companies"}}
      {{#foreach pages}}
      <div class="container-column companies-container padding">
        <div class="title title-start">{{ title }}</div>

        {{> companies limit="8"}}

        {{#if @custom.czy_projekty_widoczne}}
        <a href="/projekty" class="button align-end">Zobacz projekty</a>
        {{else}}
        <a href="/kontakt" class="button align-end">Skontaktuj siÄ™ z nami</a>
        {{/if}}
      </div>
      {{/foreach}}
      {{/get}}
    </div>
  </div>
</main>
