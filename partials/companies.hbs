<figure class="company-list">
  {{#get "posts" filter="tags:companies" limit=limit }}

  {{#foreach posts}}
  {{#if feature_image}}
  {{#if title }}
  <div class="comapny-box">
    <div class="company-container">
      <img class="company-image" src="{{ feature_image }}" alt="{{ title }}" />
      <div class="company-content">{{ title }}</div>
    </div>
  </div>

  {{else}}
  <img class="company-image" src="{{ feature_image }}" alt="{{ title }}" />
  {{/if}}

  {{#if feature_image_caption}}
  <figcaption>{{ feature_image_caption }}</figcaption>

  {{/if}}
  {{/if}}
  {{/foreach}}
  {{/get}}
</figure>
